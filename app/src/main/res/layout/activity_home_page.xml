<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pureWhite"
    tools:context=".activities.ActivityHomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape_for_progress_bar"
            android:indeterminate="false"
            android:max="6"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageButton
            android:id="@+id/btn_basic_concept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/round_button_activate1"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:textAlignment="center"
        android:gravity="top"
        android:text="@string/tv_basic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:background="@drawable/circle_shape_for_progress_bar"
            android:indeterminate="false"
            android:max="6"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageButton
            android:id="@+id/btn_class_object"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/round_button_unactivate1"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/circle_shape_for_progress_bar"
            android:indeterminate="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:max="3"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageButton
            android:id="@+id/btn_function"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/round_button_unactivate1"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flow_control"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/tv_class">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/tv_function"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape_for_progress_bar"
            android:indeterminate="false"
            android:max="8"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageButton
            android:id="@+id/btn_miscellaneous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button_unactivate1"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:textAlignment="center"
        android:text="@string/tv_miscell"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape_for_progress_bar"
            android:indeterminate="false"
            android:max="23"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageButton
            android:id="@+id/btn_success"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button_unactivate2"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:textAlignment="center"
        android:text="@string/tv_overall_progress"/>

    <TextView
        android:id="@+id/tv_tree"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkGrey"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_lesson_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/button_lesson_act" />

        <ImageButton
            android:id="@+id/btn_profile_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/button_profile_unact" />

    </LinearLayout>

</LinearLayout>